<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.befitdemo.BmiResult"
    android:background="#fbeb50">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your BMI is "
        android:layout_centerHorizontal="true"
        android:textColor="?android:attr/colorForeground"
        android:textSize="36sp"
        android:layout_marginTop="26dp" />

    <TextView
        android:id="@+id/bmi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="50sp"
        android:textColor="?android:attr/colorForeground"
        tools:layout_editor_absoluteY="147dp"
        tools:layout_editor_absoluteX="139dp"
        android:layout_marginTop="125dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bmi_text"
        android:id="@+id/bmi_info"
        android:text="bhalu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bmi_info"
        android:layout_centerHorizontal="true"
        android:text="Next"
        android:id="@+id/next"
        android:layout_marginTop="50dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_below="@id/bmi_text"
    android:gravity="bottom"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="20dp">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOTE :"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="436dp"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In the range of 18.9 to 24.9, BMI is considered safe."
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/textView7"
        android:layout_below="@id/bmi_text"
         />
</LinearLayout>

</RelativeLayout>
